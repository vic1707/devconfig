{
  "$schema": "http://json.schemastore.org/stylelintrc.json",
  "extends": ["stylelint-config-prettier-scss", "stylelint-config-sass-guidelines"],
  "rules": {
    "max-nesting-depth": [
      5,
      {
        "ignoreAtRules": [
          "each",
          "media",
          "supports",
          "include"
        ]
      }
    ]
  }
}
